<%- include ('../partials/header'); %>

<!-- Content for the Add_Edit page -->
<!-- //Lahat ng ejs variables nasa loob ng < % = variable(ex. title) %    > -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <input type="hidden"
                        name="id"
                        value="<%= item._id %>"
                    >
                    <label for="ContactNameField">Contact Name</label>
                    <input type="text" class="form-control"
                        id="Contact Name"
                        placeholder="Enter the Contact Name"
                        name="ContactName" 
                        value="<%= item.Contact_Name %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="ContactNumberField">Contact Number</label>
                    <input type="number" class="form-control"
                    id="ContactNumber"
                    placeholder="00"
                    name="ContactNumber" 
                    value="<%= item.Contact_Number %>"
                    required>
                </div>
                <br />
                <div class="form-group">
                    <label for="EmailAddressField">Email Address</label>
                    <input type="text" class="form-control"
                    id="statusTextField"
                    placeholder="Enter a status"
                    name="Email Address" 
                    value="<%= item.Email_Address %>"  >
                </div>
                <br />
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> 
                    Submit
                </button>
                
                <a href="/contactList/list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> 
                    Cancel
                </a>

            </form>
        </div>

    </div>
</div>

<%- include ('../partials/footer'); %>